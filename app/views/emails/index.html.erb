<div class="container">
<h1 class="text-center my-4">Gmail Alpha</h1>
	<div class="row">
		<div class="col-4">
			<%= render 'form' %>
			<div id="email-list">
				<% @emails.each do |email| %>
					<p class="email-index not-read my-0">
						<span class="email-read">Non-lu</span> | <%= link_to email.title, email_path(email.id), remote: true, :class => "show-email" %> | <%= link_to "Supprimer", email_path(email.id), remote: true, :data => {:confirm => "Vous êtes sûr ?", :method => "delete"}, :class => "text-dark delete-email" %>
						</p>
				<% end %>
			</div>
		</div>
		<div id ="email-view" class="col-6 text-center border my-3 mx-4 p-4">
			<h4><%= @last_email.title %></h4>
			<p class="text-muted"><%= @last_email.author %></p>
			<p><%= @last_email.content %></p>
		</div>
	</div>
</div>



